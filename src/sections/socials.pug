mixin socials(className, items, mod)
  ul(class=`${className}__list`)
    each social in items
      li(class=`${className}__item ${className}__item-${mod}`)
        a(class=`${className}__link ${className}__link-${mod} ${className}__link-${social}` href='#')
          +icon(`${social}`, `${className}__link-pic ${className}__link-${mod}-pic`)